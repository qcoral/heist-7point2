---
import "./globals.css";

let chatMessages = [];

try {
  const response = await fetch('https://heist.iunstable0.com/posts');
  chatMessages = await response.json();
} catch (error) {
  console.error('Error fetching posts:', error);
}
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
  <title>heist 7.2</title>
</head>
<body>
  <div class="title">
    <h1>heist 7.2</h1>
  </div>

  <h1 class="cel">quick! who are you and what are you up to?</h1>
  <div>
    <form method="POST">
      <label class="cel">
        name:
        <input type="text" name="name" required />
      </label>
      <label class="cel">
        room #:
        <input type="text" name="room" />
      </label>
      <label class="cel">
        message:
        <input type="text" name="message" required maxlength="20" />
      </label>
      <div class="cell">
        <button type="submit">submit</button>
      </div>
    </form>

    <div class="chat-messages">
      {chatMessages.map((msg) => (
        <div class="chat-message">
          <strong>{msg.name}: {msg.room_num}</strong>: {msg.message}
        </div>
      ))}
    </div>
  </div>
</body>
</html>